<div class="col-12 category-listing__nav-advanced active">
  <div class="category-listing__advanced">
    <div class="row">
      <div class="col-12">
        <div class="advanced-list">
          <div class="title">
            Type
          </div>
          <div class="milan-select-option">
            <div class="arrow down grey-small"></div>
            <%= select_tag "type", options_from_collection_for_select(@types, "id", "name") %>
          </div>
        </div>
        <div class="advanced-list">
          <div class="title">
            Tahun
          </div>
          <div class="milan-select-option">
            <div class="arrow down grey-small"></div>
            <%= select_tag "year", options_from_collection_for_select(@years, "id", "year") %>
          </div>
        </div>
        <div class="advanced-list">
          <div class="title">
            Transmission
          </div>
          <div class="milan-select-option">
            <div class="arrow down grey-small"></div>
            <%= select_tag "transmission", options_from_collection_for_select(@transmissions, "id", "transmission") %>
          </div>
        </div>
        <div class="advanced-list">
          <div class="title">
            Kilometer
          </div>
          <div class="milan-select-option">
            <div class="arrow down grey-small"></div>
            <select name="filter_kilometer" id="filter_kilometer" data-validate="true" data-required="false"
              data-field="dropdown">
              <option value="">Pilih Kilometer</option>
              <option value="0-5000">0-5000</option>
              <option value="5001-10000">5001-10000</option>
              <option value="10001-15000">10001-15000</option>
              <option value="15001-20000">15001-20000</option>
              <option value="20001-25000">20001-25000</option>
              <option value="25001-30000">25001-30000</option>
              <option value=">30000">&gt;30000</option>
            </select>
          </div>
        </div>
        <div class="advanced-list">
          <div class="title">
            Fuel
          </div>
          <div class="milan-select-option">
            <div class="arrow down grey-small"></div>
            <%= select_tag "fuel", options_from_collection_for_select(@fuels, "id", "fuel") %>
          </div>
        </div>
        <div class="advanced-list">
          <div class="title">
            Warna
          </div>
          <div class="milan-select-option">
            <div class="arrow down grey-small"></div>
            <%= select_tag "color", options_from_collection_for_select(@colors, "id", "color") %>
          </div>
        </div>
        <div class="advanced-list">
          <div class="title">
            CC
          </div>
          <div class="content">
            <input class="milan-input milan-input--right-text" data-field="textbox" data-required="false"
              data-type="string" data-validate="true" id="attributes_611" name="filter_cc" type="text" value="">
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12 margin-bottom">
      <div class="advanced-button-container pull-right">
        <!-- <%= button_to "Reset", name: "button", type: "button", class: "button button--white button-reset" %> -->
        <button name="button" type="button" class="button button--white button-reset">Reset</button>
        <button name="button" type="button" class="button button--orange button-result"
          onclick="$('#filter_category').submit()">Tampilkan Hasil</button>
      </div>
    </div>
  </div>
</div>